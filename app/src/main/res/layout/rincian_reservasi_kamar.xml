<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtRincianReservasiJenisKamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Junior Suite" />

    <TextView
        android:id="@+id/txtViewRincianReservasiJumlahKamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtRincianReservasiJenisKamar"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="x 2" />

    <TextView
        android:id="@+id/txtRincianReservasiHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtRincianReservasiJenisKamar"
        android:layout_marginEnd="43dp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Rp 200000" />
</RelativeLayout>